generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
  moduleFormat    = "cjs"
}

datasource db {
  provider = "postgresql"

}
model User {
  id           Int       @id @default(autoincrement())
  name         String
  email        String    @unique
  password     String
  phoneNumber  String?
  houseNumber  String?
  streetNumber String?
  town         String?
  city         String?
  country      String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@map("users")
}

model Product {
  id          Int           @id @default(autoincrement())
  title       String
  description String       
  type        ProductTypes
  gender      ProductGender
  brand       String        @default("Black Pearl")
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  @@map("products")
}

model ProductVariant {
  id               Int               @id @default(autoincrement())
  product          Product           @relation(fields: [productId], references: [id])
  productId        Int
  size             ProductVariantSizes
  color            ProductVariantColors
  sku              String            @unique
  price            Int
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt

  @@map("product_variants")
}

model Order {
  id                Int             @id @default(autoincrement())
  user              User            @relation(fields: [userId], references: [id])
  userId            Int
  productVariant    ProductVariant  @relation(fields: [productVariantId], references: [id])
  productVariantId  Int
  status            OrderStatus     @default(pending)
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt

  @@map("orders")
}

model OrderItem {
  id               Int             @id @default(autoincrement())
  order            Order           @relation(fields: [orderId], references: [id])
  orderId          Int
  productVariant   ProductVariant  @relation(fields: [productVariantId], references: [id])
  productVariantId Int
  quantity         Int
  price            Int
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt

  @@map("order_items")
}

model Inventory {
  id               Int             @id @default(autoincrement())
  productVariant   ProductVariant  @relation(fields: [productVariantId], references: [id])
  productVariantId Int             @unique
  quantity         Int
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt

  @@map("inventory")
}

enum ProductGender {
  men
  women
  unisex
}

enum ProductTypes {
  jeans
  shorts
}

enum ProductVariantSizes {
  S
  M
  L
  XL
  XXL
}

enum ProductVariantColors {
  black
  blue
  darkBlue
  lightBlue
}

enum OrderStatus {
  pending
  paid
  shipped
  delivered
  cancelled
}
